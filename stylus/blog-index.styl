/* dest: blog/blog-index.css */

@require "_color-palette.styl"
@require "_constants.styl"

$checkbox-horz-margin = .25em
$checkbox-vert-margin = .25em

html
    overflow-y: scroll

.tag-list
    display: flex
    flex-direction: row
    flex-wrap: wrap
    justify-content: flex-start
    *
        min-width: "calc(50% - %s)" % (2 * $checkbox-horz-margin)
        margin: $checkbox-vert-margin $checkbox-horz-margin

.post-list
    margin-vert: 1.5em

li.post-entry
    .title
        a
            text-decoration: none
        h2
            display: block
            margin:  0
    .brief
        color: #c4c4c4
        margin-vert: 1em
        p
            margin: 1em 0
            &:first-child
                margin-top: 0
            &:last-child
                margin-bottom: 0
    .footer
        .continue-reading
            color: #ababab
            display: inline-block
            text-decoration: none
            font-size: .8em
            letter-spacing: 0.1em
            padding: .25em 1em .25em 0
        .ctime
            color: #ababab
            margin-left: 2ch
            letter-spacing: .01em
            font-size: .8em
            padding: .25em 1em .25em 0


@media screen and (min-width: $px-small)
    .tag-list
        *
            min-width: "calc(33.3% - %s)" % (2 * $checkbox-horz-margin)

@media screen and (min-width: $px-medium)
    .tag-list
        *
            min-width: initial

@media screen and (min-width: $px-tablet)
    .post-entry
        .footer .continue-reading
            transition: color .3s, border-bottom-color .3s
            &:hover, &:focus
                    color: $color.light-blue.accent-2

@media screen and (min-width: $px-desktop)
    article
        padding-top: 1em

@media print
    .post-entry
        .brief
            margin-bottom: 0
        .footer
            display: none
