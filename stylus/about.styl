/* dest: about/about.css */

@require "_color-palette.styl"
@require "_constants.styl"

article
    strong
        font-weight: $font-weight-bold

.contact-list
    list-style: none
    padding: 0
    font-size: 1.5em
    li
        a
            text-decoration: none
            display: block
            &:before
                margin-right: .5em
                opacity: .75

.donation-list
    list-style: none
    padding: 0
    font-size: 1.2em
    li
        a
            text-decoration: none
            &:before
                margin-right: .5em
                opacity: .75

.donation .layout
    display: flex
    justify-content: flex-start
    align-items: center
    .avatar-box
        margin: 0 1em 0 0
        .avatar
            border-radius: 1em
            box-shadow: 0 0 1.5em $color.gray.lighten-4
            width:  auto
            height: auto
    .donation-list
        flex-grow: 1
        margin: 0

#alipay-qr-code, #wechat-qr-code, #wechat-payment-qr-code
    cursor: pointer

@media screen and (min-width: $px-tablet)
    .contact-list
        li
            &:hover
                color: $color.light-blue.accent-2
                a, a:visited, &:before
                    color: inherit
                    transition: color .5s

@media screen and (min-width: $px-desktop)
    .donation-list
        display: inline-block
        li
            a:hover
                color: $color.amber.lighten-1
